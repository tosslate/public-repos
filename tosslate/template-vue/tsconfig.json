{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "noImplicitThis": true,
    "skipLibCheck": true,
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM"],
    "jsx": "preserve",
    "noEmit": true
  },
  "include": ["src/env.d.ts", "src/**/*.vue", "src/**/*"]
}
